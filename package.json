{
  "name": "financeservice",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/app.ts",
    "prebuild": "prisma generate",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "postbuild": "cp src/shared/currencies.json dist/shared/currencies.json",
    "start:prod": "npx prisma migrate deploy && node dist/app.js",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "prisma:dev": "prisma migrate dev",
    "prisma:gen": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:status": "prisma migrate status",
    "gen:tests": "tsx tools/gen-tests.ts \"src/**/*.{ts,tsx}\"",
    "gen:tests:dry": "tsx tools/gen-tests.ts \"src/**/*.{ts,tsx}\" --dry"
  },
  "prisma": {
    "schema": "src/infrastructure/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "awilix": "^12.0.5",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "prisma": "^6.16.2",
    "telegraf": "^4.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "c8": "^10.1.3",
    "eslint": "^9.36.0",
    "globby": "^15.0.0",
    "prettier": "^3.6.2",
    "ts-morph": "^27.0.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "undici": "^7.16.0",
    "vitest": "^4.0.3"
  }
}
